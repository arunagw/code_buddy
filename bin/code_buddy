#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'rubygems'
require 'code_buddy'
require 'code_buddy/server'
require 'daemons'

command = ARGV.shift

stdin = STDIN.read
if !STDIN.tty? && !stdin.empty?
  CodeBuddy::Server.update(stdin)
else 
  case command
  when "start"
    CodeBuddy::Server.start
  when "stop"
    CodeBuddy::Server.stop
  when "exec"
  end
end