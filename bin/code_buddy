#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'rubygems'
require 'code_buddy'
require 'code_buddy/server'
require 'daemons'

command = ARGV.shift

case command
when "start"
  CodeBuddy::Server.start
when "stop"
  CodeBuddy::Server.stop
when "exec"
  CodeBuddy::Server.exec
end